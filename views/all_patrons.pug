doctype html
html
  head
    title Patron
    link(rel="stylesheet", href="../stylesheets/style.css")
     
  nav
    ul
      li
        a(href='/books/all') Book
      li
        a(href='/patrons/all') Patron
      li
        a(href='/loans/all') Loan
  body
    h1 Patron
    p
      a.button(href='/patrons/new') Create New Patron
    table
      thead
        tr
          th Name 
          th Address
          th Email
          th Library ID
          th Zip
      tbody
       each patron in patrons
        tr
          td
            a(href='/patrons/details/'+ patron.id)= patron.first_name + " " + patron.last_name
          td= patron.address
          td= patron.email
          td= patron.library_id
          td= patron.zip_code
      
